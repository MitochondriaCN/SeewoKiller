<Window x:Class="SeewoKiller.Notification"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SeewoKiller"
        mc:Ignorable="d"
        Title="析龌管家 - 通知" Height="720" Width="1280" WindowState="Normal" WindowStyle="None" ResizeMode="NoResize"
        Topmost="True" Loaded="Window_Loaded" Background="#dfe6e9">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="3*"/>
        </Grid.RowDefinitions>
        <TextBlock x:Name="txbContent" HorizontalAlignment="Center" VerticalAlignment="Center" TextWrapping="Wrap" FontSize="80"
                   Foreground="#2d3436"/>
        <Button Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,20,0,0" BorderThickness="0"
                FontSize="30" Background="#0984e3" Foreground="#dfe6e9" Padding="10" Click="Button_Click">退出通知</Button>
    </Grid>
</Window>
